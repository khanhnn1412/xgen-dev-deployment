FROM python:3.10-slim

# Install system dependencies
RUN apt-get update && \
    apt-get install -y curl ffmpeg gcc && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install -r requirements.txt

# Install development dependencies for hot reload
RUN pip install --no-cache-dir uvicorn[standard] watchdog

# Create a non-root user
RUN useradd --create-home --shell /bin/bash app && chown -R app:app /app
USER app

EXPOSE 8030

# Command to run with hot reload
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8030", "--reload"]
