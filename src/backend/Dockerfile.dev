FROM python:3.11-slim

# Install curl and other necessary packages
RUN apt-get update && apt-get install -y curl

# Library for convert pdf2image
RUN apt-get install -y --no-install-recommends poppler-utils

RUN rm -rf /var/lib/apt/lists/*

# Set the working directory
WORKDIR /app

# Copy requirements.txt and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install development dependencies for hot reload
RUN pip install --no-cache-dir uvicorn[standard] watchdog

# Create a non-root user
RUN useradd --create-home --shell /bin/bash app && chown -R app:app /app
USER app

# Expose port
EXPOSE 8000

# Command to run with hot reload
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
